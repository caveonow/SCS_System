  <% end %>
  
	<div class="signup">
		<h1>Registration</h1>
  <div class="field">
    <%= f.label :Name %><br>
    <%= f.text_field :StudentName , :placeholder => "Julian"%>
  </div>
  <div class="field">
    <%= f.label :"IC Number"%><br>
    <%= f.text_field :StudentIC , :placeholder => "930423-13-5365"%>
  </div>
  <div class="field">
    <%= f.label :Age %><br>
    <%= f.number_field :StudentAge%>
  </div>
  <div class="field">
    <%= f.label :Email %><br>
    <%= f.text_field :StudentEmail , :placeholder => "abc@mail.com"%>
  </div>
  <div class="field">
    <%= f.label :Programme %><br>
    <%= f.text_field :StudentProgramme %>
  </div>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password , :placeholder => "password"%>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation , :placeholder => "password"%>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
  </div>
<% end %>
