<%= form_tag(submit_create_answers_path, remote: true) do %>
  <%= hidden_field_tag :AnswerCount, :value => "0" %> 
  <%= hidden_field_tag :question_id, :value => params[:question_id] %>
	<div class="row">
		<div class="large-12 columns new_form">
	        <%= label_tag :AnswerDesc, 'Answer' %>
	        <%= text_field_tag :AnswerDesc%>
    	</div>
	</div>  
	
	<div class="row">
		<div class="large-12 columns new_form">

			<%= radio_button_tag :choice, "IsSubAnswer"%>
			<%= label_tag :IsSubAnswer, 'Is Sub Answer?', :value => 'IsSubAnswer' %>	</br>		
			<%= radio_button_tag :choice, "IsSubQuestion"%>
			<%= label_tag :IsSubQuestion, 'Is Sub Question?', :value => 'IsSubQuestion' %> </br>			
			<%= radio_button_tag :choice, "None" , true%>			
			<%= label_tag :nothing, 'None', :value => 'None' %>
    	</div>
	</div>  	
		
	<div class="row">
	<div class="large-6 columns">
		<%= submit_tag "Create" , data: { confirm: 'Are you sure?'}%>
	</div>
		<div class="large-6 columns">
	<%= submit_tag "clear", :type => "reset" %>
	</div>
  </div>

<% end %>

