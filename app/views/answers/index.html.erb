<p id="notice"><%= notice %></p>

<h1>Listing Answers</h1>

<table>
  <thead>
    <tr>
      <th>Answerdesc</th>
      <th>Issubanswer</th>
      <th>Answercount</th>
      <th>Question</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.AnswerDesc %></td>
        <td><%= answer.IsSubAnswer %></td>
        <td><%= answer.AnswerCount %></td>

        <td><% if answer.question.present?  %>         	  
        	<%= answer.question.id %>
        	<%else%>  
        	<%= answer.question %>
        	<%end%>
        </td>
        <td><%= link_to 'Show', answer %></td>
        <td><%= link_to 'Edit', edit_answer_path(answer) %></td>
        <td><%= link_to 'Destroy', answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

