
	<div class="row collapse">
		<div class="large-4 columns">
			<ul class="tabs" data-tabs id="example-tabs" > 
			  <li class="tabs-title is-active"><a href="#panel1" aria-selected="true">Tab 1</a></li>
			  <li class="tabs-title"><a href="#panel2">Tab 2</a></li>
			</ul>
			<div class="tabs-content" data-tabs-content="example-tabs"  style="height: 450px;overflow-y:scroll;">
			  <div class="tabs-panel is-active" id="panel1" >
			  	<h4>Horizontal line graph</h4>
			    <div class="image-wrapper overlay-fade-in">
			      <img src="/assets/column_bar.jpg" />   
			      <div class="image-overlay-content">
			        <h2>Horizontal line graph</h2>
        			<a id="horizongraph" class="button">Select</a>
			      </div>
			    </div>
			    <h4>Vertical line graph</h4>
			    <div class="image-wrapper overlay-fade-in">
			      <img src="/assets/horizontal-bar-chart.png" />   
			      <div class="image-overlay-content">
			        <h2>Vertical line graph</h2>
			        <a id="verticalgraph" class="button">Select</a>
			      </div>
			    </div>
			  </div>
			  <div class="tabs-panel" id="panel2">
			  	<div class="row collapse">
				  <div class="medium-4 columns">
				    <ul class="tabs vertical" id="example-vert-tabs" data-tabs>
				      <li class="tabs-title is-active"><a href="#panel1v" aria-selected="true">Title</a></li>
				      <li class="tabs-title"><a href="#panel2v">Appearence</a></li>      
				    </ul>
				    </div>
				    <div class="medium-8 columns">
				    <div class="tabs-content vertical" data-tabs-content="example-vert-tabs">
				      <div class="tabs-panel is-active" id="panel1v">
				        <p>Main Title</p>
				        <p>
				        	<label>Title: </label>
				        	<input type="text" name="title" id="title">
				           <br/>
				           <label>Sub Title: </label>
				        	<input type="text" name="subtitle" id="subtitle">
				        </p>
				      </div>
				      <div class="tabs-panel" id="panel2v">
				       <p>Title Size:
				       <input type="number" name="title-size" id="sizetitle" min="12" max="50" value="12"></p>
				       <button type="button" id="boldtitle" class="secondary button" style="font-style: bold">B</button>
				       <button type="button" id="italictitle" class="secondary button" style="font-style: italic">I</button>
				       <button type="button" id="undertitle" class="secondary button" style="font-style: underline">U</button>
				       <p>Sub Title Size:
				       <input type="number" name="title-size" id="sizesubtitle" min="12" max="50" value="12"></p>
				       <button type="button" id="boldsubtitle" class="secondary button" style="font-style: bold">B</button>
				       <button type="button" id="italicsubtitle" class="secondary button" style="font-style: italic">I</button>
				       <button type="button" id="undersubtitle" class="secondary button" style="font-style: underline">U</button>
				      </div>
				    </div>
				  </div>
				</div>
			  </div>
			</div>

		</div>	
		<div class="large-8 columns">
		<h4>Preview</h4>
		<div>
			<p id="previewtitle" class="changeMe" style="line-height: 70%;text-align:center"></p>
			<p id="previewsubtitle" class="changeMe1" style="line-height: 70%;text-align:center "></p>	
			<p id="previewgraph"><%= line_chart @user.group(:created_at).count, discrete: true %></p>		
		</div >	
		
		<div class="small-4 columns">

		    
		  
		  </div>

      	
			<div class="row align-center">
		
	</div>
	</div>
		</div>
		 
