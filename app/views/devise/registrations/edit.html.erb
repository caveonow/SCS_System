<h2 style="margin-left: 20px">Edit <%= resource_name.to_s.humanize %></h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put ,"data-abide" => '',"novalidate" => ''})do |f| %>
<%= devise_error_messages! %>
<div class="row">
	
	<div data-abide-error class="alert callout" style="display: none;">
		 <p><i class="fi-alert"></i> There are some errors in your signup details.</p>
	</div>

	<div class="large-4 columns">
	

	  <div class="field field-padding">
	    <%= f.label :email %><br />
	    <%= f.email_field :email, autofocus: true , plcaeholder:"someone@example.com", :required => true%>
	    <span class="form-error">The email is required</span>
	  </div>
	
	  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
	    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
	  <% end %>
	
	  <div class="field field-padding">
	    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
	    <%= f.password_field :password, autocomplete: "off" %>
	    <% if @minimum_password_length %>
	      <br />
	      <em><%= @minimum_password_length %> characters minimum</em>
	    <% end %>
	  </div>
	
	  <div class="field field-padding">
	    <%= f.label :password_confirmation %><br />
	    <%= f.password_field :password_confirmation, autocomplete: "off" %>
	  </div>
	
	  <div class="field field-padding">
	    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
	    <%= f.password_field :current_password, autocomplete: "off" , :required => true%>
	    <span class="form-error">The password is required</span>
	  </div>
	  
	  
	  <div class="field field-padding">
	  	<%= f.label :name %><br />
	  	<%= f.text_field :name , :required => true%>
	  	<span class="form-error">The name is required</span>
	</div>
	
	<div class="field field-padding">
	  <%= f.label :ICNo, "IC Number" %><br />
	  <%= f.text_field :ICNo , :required => true%>
	  <span class="form-error">The IC number is required</span>
	</div>
	
	<div class="actions field-padding">
		    <%= f.submit "Update" %>
		  
		  <%= link_to "Back", :back %>
		  </div>
	</div>
	<div class="large-4 columns">
	<div class="field field-padding">
	  <%= f.label :DateOfBirth, "Date of Birth" %><br />
	  <%= f.text_field :DateOfBirth , :required => true%>
	  <span class="form-error">The Date of Birth is required</span>
	</div>
	
	<div class="field field-padding">
	  <%= f.label :age, "Age" %><br />
	  <%= f.text_field :age ,:readonly => true, :required => true%>
	  <span class="form-error">The age is required</span>
	</div>
	
	
	<div class="field field-padding">
	  <%= f.label :gender, "Gender" %><br />
	  <%= f.radio_button :gender, 'Male', :checked => true %> 
	  <%= label :gender, 'Male' %>
	  <%= f.radio_button :gender, 'Female' %>
	  <%= label :gender, 'Female' %>
	</div>	
	
	<div class="field field-padding">
		<%= f.label :faculty_id, "Faculty" %><br>
		<%= collection_select(:user, :faculty_id, Faculty.where.not(facultyname: "All"), :id, :facultyname, {prompt: true}) %>  
	</div>
	
	<div class="field field-padding">
		<%= f.label :programme_id , "Programme"%><br>
		<%= collection_select(:user, :programme_id, Programme.where.not(programmename: "All"), :id, :programmename, {prompt: true}) %>  
	</div>
	
	<div class="field field-padding">
		<%= f.label :levelofstudy_id ,"Level"%><br>
		<%= collection_select(:user, :levelofstudy_id, Levelofstudy.where.not(levelname: "All"), :id, :levelname, {prompt: true}) %>  
	</div>
	
	<div class="field field-padding">
		<%= f.label :yearofstudy_id , "Year"%><br>
		<%= collection_select(:user, :yearofstudy_id, Yearofstudy.where.not(year: "All"), :id, :year, {prompt: true}) %>  
	</div>
	</div>
	
		
	<% end %>
	
	
	<div class="large-3 columns">
	<h3>Cancel my account</h3>
	<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
	</div>
	</div>