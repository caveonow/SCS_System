<br/>
	<div>
		<div class="columns">
					<h1><%= @question.QuestionNumber %>. <%= @question.QuestionDesc %></h1> 

					<% obtain_answers(@question.id).each do |a|%>	
					<%-#Assuming that  IF it is NOT a SubAnswer, it could have a subquestion -%>
						<% if !a.IsSubAnswer or a.IsSubAnswer == 0%>
							<br/>
							<p><%= check_box_tag 'answer_ids[]', a.id -%>
							<%= a.AnswerDesc%></p>
								<%if a.IsSubQuestion or a.IsSubQuestion == 1%>
									<br/>				
									<% obtain_subquestion(a.id).each do |sq| %>

										<%=@question.QuestionNumber%><%= sq.SQChar%>. <%= sq.SQDesc%>
										<br/>
										<% obtain_subquestionanswer(sq.id).each do |sqa|%>
											<br/>
											<%= check_box_tag 'SQAnswer_ids[]', sqa.id -%>
											<%= sqa.SQAnswer%>		
										<%end%>

									<%end%>
								<%end%>
						<%elsif  a.IsSubAnswer or a.IsSubAnswer == 1%>
							<br/>
							<%= a.AnswerDesc%> [[[SubAnswer here YES/NO]]]
							<br/>
							<% obtain_subanswers(a.id).each do |sa|%>
								<br/>
								<%= check_box_tag 'subanswer_ids[]', sa.id -%>
								<%= sa.SADesc%>
						<%end%>
					<%end%>
					<%end%>

			<br/><br/<br/>
		
		<% obtain_questions(section_id).each do |q| %>
			<%= link_to url_for(:question_number => q.id, :section_id => section_id) do %>
			<div style="width:20px;height:20px;background-color:black;color:white"><%= q.QuestionNumber%></div>
			<%end%>
		<%end%>
		</div>
	</div>