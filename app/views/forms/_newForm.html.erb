<%= form_for(@form) do |f| %>
  <% if @form.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@form.errors.count, "error") %> prohibited this form from being saved:</h2>

      <ul>
      <% @form.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="row">
    <div class="large-6 columns">
       <%= f.label :FormName, 'Form Name' %>
        <%= f.text_field :FormName%>
    </div>
    
    <div class="large-6 columns">
	    <%= f.label :FormDescription, 'Form Description' %>
	    <%= f.text_field :FormDescription%>
    </div>  
 </div>  
  
  <div class="row">
	<div class="large-5 columns">
		<br/>
	</div>
