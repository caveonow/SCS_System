<p id="notice"><%= notice %></p>

<h1>Forms</h1>

<table>
  <thead>
    <tr>
      <th>Form Name</th>
      <th>Form Description</th>
      <th>Form Created</th>
      <th>Form Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @forms.each do |form| %>
      <tr>
        <td><%= form.FormName %></td>
        <td><%= form.FormDescription %></td>
        <td><%= form.FormDateTime.strftime("%d %B %Y") %></td>
        <td><%= form.FormStatus %></td>
        <td><%= link_to 'Show', form %></td>
        <td><%= link_to 'Edit', edit_form_path(form) %></td>
        <td><%= link_to 'Destroy', form, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

