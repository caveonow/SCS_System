$('#displayQuestion').html("<%= j (render 'questionShow') %>");
$('#displayQuestion').slideDown(350);

<%@formSections.each do |fsection|%>
	<%if fsection.id == @selected_section.id %>
		if (!$('#<%= fsection.id%>').hasClass('is-active')){
			$('#<%= @selected_section.id%>').toggleClass('is-active');	
		}
		
	<%elsif fsection.id != @selected_section.id %>
		$('#<%= fsection.id%>').removeClass('is-active');
		$('#displayTitle').append('<%= @formSections.first.SectionName%>');
		
	<%end%>
<%end%>
