<% if !@user_available_survey.empty?%>
<table>
  <thead>
    <tr>
      <th>Survey Name</th>
      <th>Description</th>
      <th>Formstatus</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  	
    <% @user_available_survey.each do |form| %>
      <tr>
        <td><%= form.FormName %></td>
        <td><%= form.FormDescription %></td>
        <td>Available</td>
        <td><%= link_to 'Begin Survey', user_selected_survey_forms_path(:form_id => form.id, :user_id => current_user.id) %>  </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%else%>
<br />
<h3>No Available Surveys at the moment! :D</h3>
<br /><br /><br /><br />
<%end%>
