

<h1>Listing Users</h1>

<table id="users" class="display">
  <thead>
    <tr>
      <th>Email</th>
      <th>Name</th>
      <th>Role</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
      	<td><%= user.email %></td>
        <td><%= user.name %></td>
        <td><%= user.role.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>
