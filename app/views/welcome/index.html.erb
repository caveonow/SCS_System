<!-- First Banners (Slider) -->
	
<div class="row align-center">
  <div class="orbit " role="region" aria-label="Favorite Space Pictures" data-orbit  data-options="animInFromLeft:fade-in; animInFromRight:fade-in; animOutToLeft:fade-out; animOutToRight:fade-out;">
  <ul class="orbit-container">
    <button class="orbit-previous"><span class="show-for-sr">Previous Slide</span>&#9664;&#xFE0E;</button>
    <button class="orbit-next"><span class="show-for-sr">Next Slide</span>&#9654;&#xFE0E;</button>
    <% @welcomeBs.each do |bannerslide| %>
    <li class="is-active orbit-slide ">
    	<%= image_tag bannerslide.imageBs_url(:thumb), :class => "orbit-image" ,:style=>"height:450px; width:1200px;"%>
      <figcaption class="orbit-caption"><%= bannerslide.name %></figcaption>
    </li>
    <% end %>
  </ul>
   
  <nav class="orbit-bullets">
    <button class="is-active" data-slide="0"><span class="show-for-sr"></span><span class="show-for-sr">Current Slide</span></button>
    <% for count in 1..@welcomeCount do %>
    <%if @welcomeCount > count %>
    <button data-slide="<%= count %>"> <span class="show-for-sr"></span></button>
    <% end %>
    <% end %>
  </nav>
</div>
