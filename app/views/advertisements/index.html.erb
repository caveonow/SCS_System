<p id="notice"><%= notice %></p>

<h1>Listing Advertisements</h1>

<table>
  <thead>
    <tr>
      <th>Advertisementname</th>
      <th>Advertisementdescription</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @advertisements.each do |advertisement| %>
      <tr>
        <td><%= advertisement.AdvertisementName %></td>
        <td><%= advertisement.AdvertisementDescription %></td>
        <td>
		  <% if can? :update, advertisement %>
		    <%= link_to 'Edit', edit_advertisement_path(advertisement) %>
		  <% end %>
		</td>
		
		<td>
		  <% if can? :destroy, advertisement %>
		    <%= link_to 'Destroy', advertisement, method: :delete, data: { confirm: 'Are you sure?' } %>
		  <% end %>
		</td>
		
		<% if can? :create, advertisement %>
		  <%= link_to 'New Item', new_advertisement_path %>
		<% end %>
		      </tr>
		    <% end %>
  </tbody>
</table>

<br>

